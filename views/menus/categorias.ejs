<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Seleccionar Categoría</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
    <%- include('../partials/header') %>

  <div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold text-center mb-6 text-white-800">Selecciona una Categoría</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% categorias.forEach(categoria => { %>
        <a href="/menus/categoria/<%= categoria.id_categoria %>" class="block bg-white hover:bg-blue-50 rounded-2xl shadow p-6 text-center transition duration-300">
          <span class="text-xl font-semibold text-gray-700"><%= categoria.nombre %></span>
        </a>
      <% }) %>
    </div>
  </div>
</body>
</html>
