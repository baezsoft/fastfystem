<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Nuevo Menú</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <%- include('../partials/header') %>

  <div class="max-w-xl mx-auto p-6 bg-white rounded-2xl shadow-md mt-10">
    <h1 class="text-2xl font-bold mb-6 text-gray-800 text-center">Agregar Nuevo Menú</h1>

    <form action="/menus/nuevo" method="POST" class="space-y-4" enctype="multipart/form-data">
        <div>
            <label class="block mb-1 font-medium text-gray-700">Imagen (JPG o PNG)</label>
            <input type="file" name="imagen" accept="image/*" class="w-full px-4 py-2 border rounded-lg">
          </div>
      <div>
        <label class="block mb-1 font-medium text-gray-700">Nombre del menú</label>
        <input type="text" name="nombre" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>

      <div>
        <label class="block mb-1 font-medium text-gray-700">Precio (₲)</label>
        <input type="number" name="precio" required min="0" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>

      <div>
        <label class="block mb-1 font-medium text-gray-700">Ingredientes</label>
        <textarea name="ingredientes" rows="3" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
      </div>

      <div>
        <label class="block mb-1 font-medium text-gray-700">Categoría</label>
        <select name="id_categoria" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
          <% categorias.forEach(c => { %>
            <option value="<%= c.id_categoria %>"><%= c.nombre %></option>
          <% }) %>
        </select>
      </div>

      <div class="flex justify-between mt-6">
        <a href="/menus" class="text-sm text-blue-600 hover:underline">← Cancelar</a>
        <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600">
          Guardar
        </button>
      </div>
    </form>
  </div>
</body>
</html>
